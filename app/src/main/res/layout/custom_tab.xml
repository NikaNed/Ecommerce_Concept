<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_point"
            app:tint="@color/tab_background_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:tint="@color/tab_icon_selector" />

        <TextView
            android:id="@+id/tv_tab1"
            app:tabTextAppearance="@style/tabLayout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phones"
            android:textColor="@color/tab_text_selector"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteY="78dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im2"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_point"
            app:tint="@color/tab_background_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_computer"
            app:layout_constraintBottom_toBottomOf="@+id/im2"
            app:layout_constraintEnd_toEndOf="@+id/im2"
            app:layout_constraintStart_toStartOf="@+id/im2"
            app:layout_constraintTop_toTopOf="@+id/im2"
            app:tint="@color/tab_icon_selector" />

        <TextView
            android:id="@+id/tv_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textColor="@color/tab_text_selector"
            app:tabTextAppearance="@style/tabLayout_text"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="@+id/im2"
            app:layout_constraintStart_toStartOf="@+id/im2"
            app:layout_constraintTop_toBottomOf="@+id/im2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im3"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_point"
            app:tint="@color/tab_background_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_health"
            app:layout_constraintBottom_toBottomOf="@+id/im3"
            app:layout_constraintEnd_toEndOf="@+id/im3"
            app:layout_constraintStart_toStartOf="@+id/im3"
            app:layout_constraintTop_toTopOf="@+id/im3"
            app:tint="@color/tab_icon_selector" />

        <TextView
            android:id="@+id/tv_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textColor="@color/tab_text_selector"
            app:tabTextAppearance="@style/tabLayout_text"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="@+id/im3"
            app:layout_constraintStart_toStartOf="@+id/im3"
            app:layout_constraintTop_toBottomOf="@+id/im3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im4"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_point"
            app:tint="@color/tab_background_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_books"
            app:layout_constraintBottom_toBottomOf="@+id/im4"
            app:layout_constraintEnd_toEndOf="@+id/im4"
            app:layout_constraintStart_toStartOf="@+id/im4"
            app:layout_constraintTop_toTopOf="@+id/im4"
            app:tint="@color/tab_icon_selector" />

        <TextView
            android:id="@+id/tv_tab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Books"
            android:textColor="@color/tab_text_selector"
            app:tabTextAppearance="@style/tabLayout_text"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="@+id/im4"
            app:layout_constraintStart_toStartOf="@+id/im4"
            app:layout_constraintTop_toBottomOf="@+id/im4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im5"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_point"
            app:tint="@color/tab_background_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            app:layout_constraintBottom_toBottomOf="@+id/im5"
            app:layout_constraintEnd_toEndOf="@+id/im5"
            app:layout_constraintStart_toStartOf="@+id/im5"
            app:layout_constraintTop_toTopOf="@+id/im5"
            app:tint="@color/tab_icon_selector" />

        <TextView
            android:id="@+id/tv_tab5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessorise"
            android:textColor="@color/tab_text_selector"
            app:tabTextAppearance="@style/tabLayout_text"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="@+id/im5"
            app:layout_constraintStart_toStartOf="@+id/im5"
            app:layout_constraintTop_toBottomOf="@+id/im5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>