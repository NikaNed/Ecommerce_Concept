<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="378dp"
    android:layout_height="190dp"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="0dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_ad"
            android:layout_width="378dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/test_im" />

        <ImageView
            android:id="@+id/im_new"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_ellipse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:textSize="10sp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/im_new"
            app:layout_constraintEnd_toEndOf="@+id/im_new"
            app:layout_constraintStart_toStartOf="@+id/im_new"
            app:layout_constraintTop_toTopOf="@+id/im_new" />

        <Button
            android:id="@+id/bt_hot_sales"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Buy now!"
            android:textColor="@color/blue_dark"
            android:textSize="11sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="@+id/tv_subtitle_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_phone"
            app:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_title_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="@+id/im_new"
            app:layout_constraintTop_toBottomOf="@+id/im_new"
            tools:text="IPhone 12" />

        <TextView
            android:id="@+id/tv_subtitle_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="@+id/tv_title_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_phone"
            tools:text="Super.Mega.Rapido" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>